\renewcommand\arraystretch{2}%整体修改，注意可能会修改title间距
\renewcommand\arraycolsep{1em}%整体修改，注意可能会修改title间距

\usepackage{multirow}
\usepackage{longtable}
\usepackage{hhline}%此宏包中命令hhline提供双线

\usepackage{arydshln}%此宏包中的\hdashline,\cdashline命令提供虚线
\setlength\dashlinedash{4pt}%调整虚线中黑线的长度
\setlength\dashlinegap{4pt}%%调整虚线中白线的长度

\usepackage{booktabs}%画三线表时提供不同粗细表格横线的宏包
\renewcommand\aboverulesep{0.5em}%调整三线表中的各种间距
\renewcommand\heavyrulewidth{0.08em}
\renewcommand\lightrulewidth{0.05em}
\renewcommand\belowrulesep{0.5em}
\renewcommand\abovetopsep{0em}
\renewcommand\belowbottomsep{0em}
\renewcommand\doublerulesep{0.2em}%控制双线的双线间距
\renewcommand\arrayrulewidth{0.05em}%控制全体的竖线宽度


